<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    //NOTE: THERE IS TEXT, IT'S JUST WHITE
    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_margin="5dp"
        app:srcCompat="@android:color/background_dark"
        android:contentDescription="movieImage"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/movieImage"
        android:layout_toRightOf="@+id/movieImage"
        android:text="@string/movietitle"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/titleRed"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/movieOverview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/movieTitle"
        android:layout_toEndOf="@+id/movieImage"
        android:layout_toRightOf="@+id/movieImage"

        android:text="@string/overview_and_synopsis"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/white"/>
        //tried to do this layout but doesn't work very well
        //android:maxLines = "7"
        //android:scrollbars = "vertical"





</RelativeLayout>