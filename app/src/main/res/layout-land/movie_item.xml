<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backdropimage"
        android:layout_width="450dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/backdrop_image"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/flicks_backdrop_placeholder" android:paddingEnd="5dp"/>

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/backdropimage"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/movie_title" android:layout_toEndOf="@+id/backdropimage"/>

    <TextView
        android:id="@+id/movieOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitle"
        android:layout_toEndOf="@+id/backdropimage"
        android:layout_toRightOf="@+id/backdropimage"
        android:text="@string/movie_overview" />
</RelativeLayout>